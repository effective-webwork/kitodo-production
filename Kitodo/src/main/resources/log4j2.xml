<Configuration monitorInterval="60">
    <Properties>
        <Property name="filename">/usr/local/kitodo/logs</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Console>
        <RollingFile name="LOGFILE" fileName="${filename}/kitodo.log" filePattern="${filename}/kitodo-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
            <DefaultRolloverStrategy max="20"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="de.unigoettingen.sub.search.opac" level="info" additivity="false">
            <AppenderRef ref="LOGFILE"/>
        </Logger>
        <Logger name="org.kitodo" level="info" additivity="false">
            <AppenderRef ref="LOGFILE"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="LOGFILE"/>
        </Root>
    </Loggers>
</Configuration>
